@{ Layout = null; }
<div class="body-content">
    <div class="page-header">
        <h3>Tag Overlap Histograms</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-garnet">
                <div class="panel-heading">
                    Monthly Tags &#x2229; Transcript Histogram
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">Date:</label>
                            <div class="col-md-6">
                                <month-select class="form-control" ng-model="vm.MonthlyTagTrans_Month"></month-select>
                            </div>
                            <div class="col-md-4">
                                <year-select class="form-control" ng-model="vm.MonthlyTagTrans_Year"></year-select>
                            </div>
                        </div>
                    </div>
                    <div id="monthly_tagtrans_histogram"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-garnet">
                <div class="panel-heading">
                    Monthly Tags &#x2229; (Title &#x222a; Description &#x222a; Transcript) Histogram
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">Date:</label>
                            <div class="col-md-6">
                                <month-select class="form-control" ng-model="vm.MonthlyTagTitleDescrTrans_Month"></month-select>
                            </div>
                            <div class="col-md-4">
                                <year-select class="form-control" ng-model="vm.MonthlyTagTitleDescrTrans_Year"></year-select>
                            </div>
                        </div>
                    </div>
                    <div id="monthly_tagtitledescrtrans_histogram"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-garnet">
                <div class="panel-heading">
                    Yearly Tags &#x2229; Transcript Histogram
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">Year:</label>
                            <div class="col-md-10">
                                <year-select class="form-control" ng-model="vm.YearlyTagTrans_Year"></year-select>
                            </div>
                        </div>
                    </div>
                    <div id="yearly_tagtrans_histogram"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-garnet">
                <div class="panel-heading">
                    Yearly Tags &#x2229; (Title &#x222a; Description &#x222a; Transcript) Histogram
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">Year:</label>
                            <div class="col-md-10">
                                <year-select class="form-control" ng-model="vm.YearlyTagTitleDescrTrans_Year"></year-select>
                            </div>
                        </div>
                    </div>
                    <div id="yearly_tagtitledescrtrans_histogram"></div>
                </div>
            </div>
        </div>
    </div>
</div>