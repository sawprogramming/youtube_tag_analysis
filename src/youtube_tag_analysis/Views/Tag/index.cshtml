@{ Layout = null; }
<div class="body-content">
    <div class="page-header">
        <h3>Tags</h3>
    </div>
    <div class="panel panel-garnet">
        <div class="panel-heading clearfix">
            <div class="row row-eq-height">
                <div class="col-md-8">
                    <p class="form-control-static">Tag Dump</p>
                </div>
                <div class="col-md-4">
                    <div class="form-group has-feedback" style="padding: 0; margin: 0">
                        <input type="text" ng-model="q" class="form-control" placeholder="Search" />
                        <span class="glyphicon glyphicon-search form-control-feedback" style="color: black"></span>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <span ng-click="vm.sortType = 'Tag'; vm.sortReverse = !vm.sortReverse">
                            Tag
                            <span ng-show="vm.sortType == 'Tag' && !vm.sortReverse" class="glyphicon glyphicon-chevron-down"></span>
                            <span ng-show="vm.sortType == 'Tag' && vm.sortReverse" class="glyphicon glyphicon-chevron-up"></span>
                        </span>
                    </th>
                    <th>
                        <span ng-click="vm.sortType = 'NumVideos'; vm.sortReverse = !vm.sortReverse">
                            # Videos
                            <span ng-show="vm.sortType == 'NumVideos' && !vm.sortReverse" class="glyphicon glyphicon-chevron-down"></span>
                            <span ng-show="vm.sortType == 'NumVideos' && vm.sortReverse" class="glyphicon glyphicon-chevron-up"></span>
                        </span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr dir-paginate="tag in vm.Tags | filter:q | orderBy:vm.sortType:vm.sortReverse | itemsPerPage: 15" pagination-id="tag_dump">
                    <td ng-bind="tag.Tag"></td>
                    <td ng-bind="tag.NumVideos"></td>
                </tr>
            </tbody>
        </table>
        <div class="panel-footer clearfix">
            <dir-pagination-controls pagination-id="tag_dump"></dir-pagination-controls>
        </div>
    </div>
</div>